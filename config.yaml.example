production:
  host: "chatbot.kimchon.vn"
  port: 11988
  user: "anderson"
  ssh_key_path: "D:/Works/key SSH/andersonprod"
  ssh_passphrase: "123456" # <--- Thêm dòng này nếu có passphrase
  docker_container: "cb-db"
  db_user: "chatbot"
  db_name: "chatbot"
  db_password: "chatbot"
  # Optional: set a temp path on the remote server
  remote_temp_path: "/tmp/chatbot_backup_prod.sql.gz"

staging:
  host: "192.168.1.99"
  port: 22
  user: "anderson"
  ssh_key_path: "D:/Works/key SSH/andersonstaging"
  ssh_passphrase: "123456" # <--- Thêm dòng này nếu có passphrase
  docker_container: "cb-db"
  db_user: "chatbot"
  db_name: "chatbot"
  db_password: "chatbot"
  # Optional: set a temp path on the remote server
  remote_temp_path: "/tmp/chatbot_backup_staging.sql.gz"

local:
  # Where to store the downloaded backup
  backup_dir: "d:/Coding/tool/backuptool/dumps"
  # Filename for the local backup
  backup_filename: "prod_chatbot_backup.sql.gz"
  # Local DB Connection for restore_local
  host: "localhost"
  port: 5432
  db_user: "local_user" # Change if different
  db_name: "local_db" # Change if different
  db_password: "local_password" # Change if different
